Algoritmo "Calculo de Salario"

Var
nome: caractere
salario_bruto: real
salario_liquido:real
inss:real
ir:real


Inicio
escreval ("Digite o nome do funcionário")
leia ( nome)
escreval (" Digite o Salário do Funcionário")
leia ( salario_bruto)
se (salario_bruto <= 899) entao
  ir <- 0
  inss <- salario_bruto * 0.08
senao
     se (salario_bruto <= 1799) entao
   ir <- salario_bruto * 0.15
   inss <- salario_bruto * 0.09
   senao
    ir <- salario_bruto * 0.25
    inss <- salario_bruto * 0.10

    fimse
fimse

 salario_liquido <- salario_bruto - inss - ir

   escreval("Funcionário: ", nome)
   escreval("Salário Bruto: R$ ", salario_bruto:5:2)
   escreval("INSS: R$ ", inss:5:2)
   escreval("IR: R$ ", ir:5:2)
   escreval("Salário Líquido: R$ ", salario_liquido:5:2)


Fimalgoritmo
